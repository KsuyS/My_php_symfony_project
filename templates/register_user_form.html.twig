{% extends "base.html.twig" %}
{% block title %}Add user
{% endblock %}
{% block body %}
	<style></style>
	<h1>Введите данные</h1>
	<form enctype="multipart/form-data" action="/register" method="post">
		<div>
			<label for="first_name">First Name:</label>
			<input name="first_name" id="first_name" type="text">
		</div>
		<div>
			<label for="last_name">Last Name:</label>
			<input name="last_name" id="last_name" type="text">
		</div>
		<div>
			<label for="middle_name">Middle Name:</label>
			<input name="middle_name" id="middle_name" type="text">
		</div>
		<div>
			<label for="gender">Gender:</label>
			<input name="gender" id="gender" type="text">
		</div>
		<div>
			<label for="birth_date">Birth Date:</label>
			<input name="birth_date" id="birth_date" type="date">
		</div>
		<div>
			<label for="email">Email:</label>
			<input name="email" id="email" type="email">
		</div>
		<div>
			<label for="phone">Phone:</label>
			<input name="phone" id="phone" type="tel" minlength="11" maxlength="11" placeholder="89999999999" pattern="8\d{10}" onkeyup="this.value = this.value.replace(/[^0-9]/g, '');">
		</div>
		<div>
			<label for="avatar_path">Avatar Path:</label>
			<input name="avatar_path" id="avatar_path" type="file" accept="image/png, image/jpeg, image/gif">
		</div>
		<div>
			<label for="password">Пароль:</label>
			<input type="password" name="password" id="password" autocomplete="current-password" required>
		</div>
		<div>
			<label for="role">Роль:</label>
			<input name="role" id="role" type="text">
		</div>
		<button type="submit">Сохранить</button>
	</form>
{% endblock %}
